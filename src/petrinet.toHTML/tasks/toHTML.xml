<?xml version="1.0" encoding="UTF-8"?>
<project default="toHTML" name="petrinet.toHTML">
    <property name="ECLIPSE_HOME" value="../../../../../../../../../eclipse/modeling-2024-09/Eclipse.app/Contents/Eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="petrinet.toHTML.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/petrinet.toHTML/bin"/>
    </path>

    <path id="petrinet.toHTML.classpath">
        <path refid="petrinet.toHTML.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="petrinet.toHTML.libraryclasspath.alljars">
        <pathelement location="../petrinet.toHTML/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="petrinet.toHTML.classpath.alljars">
        <path refid="petrinet.toHTML.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="toHTML">
        <java classname="petrinet.toHTML.main.ToHTML" classpathref="petrinet.toHTML.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="toHTML.alljars">
        <java classname="petrinet.toHTML.main.ToHTML" classpathref="petrinet.toHTML.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
