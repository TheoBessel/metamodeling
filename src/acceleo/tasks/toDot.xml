<?xml version="1.0" encoding="UTF-8"?>
<project default="toDot" name="acceleo">
    <property name="ECLIPSE_HOME" value="../../../../../../../../../eclipse/modeling-2024-09/Eclipse.app/Contents/Eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="acceleo.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/acceleo/bin"/>
    </path>

    <path id="acceleo.classpath">
        <path refid="acceleo.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="acceleo.libraryclasspath.alljars">
        <pathelement location="../acceleo/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="acceleo.classpath.alljars">
        <path refid="acceleo.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="toDot">
        <java classname="acceleo.petrinet.toDot.ToDot" classpathref="acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="toDot.alljars">
        <java classname="acceleo.petrinet.toDot.ToDot" classpathref="acceleo.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
